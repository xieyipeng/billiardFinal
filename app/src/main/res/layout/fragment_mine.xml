<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:background="#fdab4b">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">


        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="我的"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/chat_huihua"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:src="@drawable/message" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@drawable/mine">

        <LinearLayout
            android:id="@+id/message_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2.5"
            android:onClick="onClick">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView_mine00"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="aaaaa"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:gravity="center" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:text="折磨人的不是离别而是忘不了的回忆"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:id="@+id/text_button_wodetiezi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/dec">

            <ImageView
                android:src="@drawable/tiezi"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="我的帖子"
                android:textSize="17dp"
                android:textColor="#101010"/>

            <ImageView
                android:src="@drawable/tubiao_you"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_button_wodeqiuyou"
            android:src="@drawable/tubiao_you"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/dec">

            <ImageView
                android:src="@drawable/friend"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20dp"/>
            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="我的球友"
                android:textSize="17dp"
                android:textColor="#101010"/>

            <ImageView

                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="1dp"
                android:src="@drawable/tubiao_you"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_button_wodeyuding"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/dec">

            <ImageView
                android:src="@drawable/order"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="我的预定"
                android:textSize="17dp"
                android:textColor="#101010"/>

            <ImageView
                android:src="@drawable/tubiao_you"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="1dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_button_wodeqiubi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/dec">

            <ImageView
                android:src="@drawable/yue"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20dp"/>

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="我的球币"
                android:textSize="17dp"
                android:textColor="#101010"/>

            <ImageView
                android:src="@drawable/tubiao_you"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="1dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_button_bangzhu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/dec">

            <ImageView
                android:src="@drawable/shop_help"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="帮        助"
                android:textSize="17dp"
                android:textColor="#101010"/>

            <ImageView
                android:src="@drawable/tubiao_you"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="1dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popinfo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>
